<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424376">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/view_separator"
        android:layout_alignParentStart="true"
        android:layout_margin="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_feet"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_feet" />

        <TextView
            android:id="@+id/tv_step_count"
            style="@style/NotificationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:text="1803" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/view_separator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:background="#61CEDD33" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignStart="@id/view_separator"
        android:layout_alignParentEnd="true"
        android:layout_margin="8dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_fire"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_fire" />

        <TextView
            android:id="@+id/tv_temperature"
            style="@style/NotificationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"

            android:text="64.9" />

    </LinearLayout>


</RelativeLayout>